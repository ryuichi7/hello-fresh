<div class='panel panel-default panel-transparent'>
	<div class='panel-heading'>
		<h2><%= @category.name %></h2>
	</div>
	<div class='panel-body'>
	</div>
	<ul class="list-group">
		<% @category.ingredients.each do |ingredient| %>
			<li class='list-group-item'><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
		<% end %>
	</ul>
</div>